<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-full max-w-md bg-white px-6 py-8 rounded-md">
    <img class="w-12 mx-auto mb-8" src="/images/logo.png" alt="Logo">
    <h1 class="text-3xl text-center mb-8 border-inherit font-semibold text-zinc-700 tracking-tight capitalize leading-none">
      Welcome to VisualHub
    </h1>
    <form action="/login" method="post" class="space-y-4">
      <label for="username">Username:</label>
      <input class="border-2 block w-full px-3 py-2" type="text" name="username" placeholder="Username">
      <label for="password">Password:</label>
      <input class="border-2 block w-full px-3 py-2" type="password" name="password" placeholder="Password">
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot your password?</a>
      <input class="border-2 block w-full px-3 py-2 bg-blue-600 text-white rounded-full" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto">
        By continuing, you agree to VisualHub's <b>Terms of Service</b> and <b>Privacy Policy</b>.
      </p>
    </form>
    <a class="inline-block mt-5 text-sm text-center w-full font-semibold text-zinc-700" href="/register">Don't have an account? Sign up</a>
  </div>
</div>

<% include ./partials/footer.ejs %>
