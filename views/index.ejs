<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center" >
  <div class="w-[25vw] h-[60vh] bg-white px-10 py-5 rounded-md">
    <img class="w-[45px] mb-8 mx-auto" src="/images/logo.png" alt="" srcset="">
    <h1
      class="text-3xl text-center mb-8 border-inherit font-semibold text-zinc-700 tracking-tight capitalize leading-none"
    >
      welcome to visulHub
    </h1>
    <form action="/login" method="post">
      <label for="username">username :</label>
      <input
        class="border-2 block w-full px-3  mt-2 mb-2  py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <label for="password">password :</label>

      <input
        class="border-2 block w-full px-3  mt-2  py-2"
        type="text"
        name="password"
        placeholder="password"
      />
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">forget password ?</a>
      <input
        class="border-2 block w-full px-3 py-2 mt-2 bg-blue-600 text-white rounded-full"
        type="submit" value="Login"
      />
      <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto">
        By continuing, you agree to Pinterest's
        <b>Terms of Service, Privacy policy.</b>
      </p>
    </form>
    <a class="inline-block mt-5 text-sm text-center w-full font-semibold text-zinc-700" href="/register">Dont have an account ?</a>
  </div>
</div>

<% include ./partials/footer.ejs %>
